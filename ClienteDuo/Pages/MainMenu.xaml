<Page x:Class="ClienteDuo.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteDuo.Pages"
      xmlns:p="clr-namespace:ClienteDuo.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MainMenu">

    <Grid Background="#FF263E54">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="336" Height="98">
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="32*"/>
            </Grid.RowDefinitions>
            <Button Content="{x:Static p:Resources.BtnNewParty}" Margin="5,5,5,5" Click="BtnNewParty" Width="155" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="14" Height="33"/>
            <Button Content="{x:Static p:Resources.BtnJoinParty}" Margin="5,5,5,5" HorizontalAlignment="Right"  VerticalAlignment="Center" Click="BtnJoinParty" Width="155" FontSize="14" Height="33"/>
            <Button Content="{x:Static p:Resources.BtnQuitGame}" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center" Click="BtnQuitGame" Width="336" Grid.Row="1" FontSize="14" Height="33"/>
        </Grid>
    </Grid>
</Page>
