<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteDuo.Pages"
             xmlns:Sidebars="clr-namespace:ClienteDuo.Pages.Sidebars" x:Class="ClienteDuo.Pages.PlayerIcon"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFC7FBFF" Offset="1"/>
                <GradientStop Color="White" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="_playerIcon" Content="" HorizontalAlignment="Center" Margin="0,10,0,10" VerticalAlignment="Top" Height="100" Width="100">
            <Label.Background>
                <ImageBrush ImageSource="/Pages/profile-user.png"/>
            </Label.Background>
        </Label>
        <Label x:Name="_nameLabel" Content="Username" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.395,0.28"/>


        <Sidebars:SidebarLeaderboard HorizontalAlignment="Left" Margin="156,58,0,0" VerticalAlignment="Top"/>


    </Grid>
</UserControl>
