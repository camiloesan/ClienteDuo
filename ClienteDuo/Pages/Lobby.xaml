<Page x:Class="ClienteDuo.Pages.Lobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteDuo.Pages"
      xmlns:p="clr-namespace:ClienteDuo.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Lobby">

    <Grid Background="#FF263E54">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="333*"/>
            <ColumnDefinition Width="333*"/>
            <ColumnDefinition Width="333*"/>
        </Grid.ColumnDefinitions>
        <Label Content="{x:Static p:Resources.LblChat}" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="0"/>
        <Label Content="{x:Static p:Resources.LblPlayers}" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="1"/>
        <Label Content="{x:Static p:Resources.LblGameSettings}" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Foreground="White" Grid.Column="2"/>
        <TextBlock x:Name="TBlockChat" HorizontalAlignment="Center" Margin="0,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="330" Width="244" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Text=""/>
        <TextBox x:Name="TBoxMessage" HorizontalAlignment="Center" Margin="0,466,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" KeyDown="SendMessage"/>
        <Button Grid.Column="1" Content="Button" HorizontalAlignment="Left" Margin="252,525,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="2" Content="Button" HorizontalAlignment="Left" Margin="29,525,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="2" Content="{x:Static p:Resources.BtnExitLobby}" HorizontalAlignment="Center" Margin="0,525,0,0" VerticalAlignment="Top" Click="BtnExitLobby"/>
    </Grid>
</Page>
