<Page x:Class="ClienteDuo.Pages.JoinAsGuest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClienteDuo.Pages"
      xmlns:p="clr-namespace:ClienteDuo.Properties"

      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="JoinAsGuest">

    <Grid Background="#FF263E54">
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,233,0,0"/>
        <Label Content="{x:Static p:Resources.LblPartyCode}" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Margin="0,264,0,0"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,295,0,0"/>
        <Label Content="{x:Static p:Resources.LblInGameUsername}" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Margin="0,202,0,0"/>
        <Button Content="{x:Static p:Resources.BtnJoin}" HorizontalAlignment="Left" Margin="440,342,0,0" VerticalAlignment="Top" Width="60" Click="BtnJoin"/>
        <Button Content="{x:Static p:Resources.BtnCancel}" HorizontalAlignment="Left" Margin="520,342,0,0" VerticalAlignment="Top" Width="60" Click="BtnCancel"/>
    </Grid>
</Page>
