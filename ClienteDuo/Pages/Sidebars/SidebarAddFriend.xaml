<UserControl x:Class="ClienteDuo.Pages.Sidebars.SidebarAddFriend"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteDuo.Pages"
             xmlns:p="clr-namespace:ClienteDuo.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="250">
    <Grid Background="{DynamicResource BtnBackground}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="100">
            <Label Content="{x:Static p:Resources.LblUsername}" HorizontalAlignment="Center" Foreground="White"/>
            <TextBox x:Name="TBoxUserReceiver" TextWrapping="Wrap" Width="120"/>
            <Button Content="{x:Static p:Resources.BtnContinue}" Click="BtnSendFriendRequest" Width="80" Margin="0,25,0,0"/>

        </StackPanel>
        <Button Content="{x:Static p:Resources.BtnCancel}" Width="60" Height="28" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="BtnClose" Background="#FF97785F" BorderBrush="{DynamicResource BtnBorder}" Foreground="White"/>
    </Grid>
</UserControl>
