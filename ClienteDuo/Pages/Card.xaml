<UserControl x:Class="ClienteDuo.Pages.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="120" Width="80" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Rectangle x:Name="_colorRectangle" Height="90" Width="65" Fill="Black"/>
        <Ellipse Height="65" Width="65" Fill="White"/>
        <Label x:Name="_numberLabel" Content="2" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
