<UserControl x:Class="ClienteDuo.Pages.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             Height="120" Width="80" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10.909"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="_colorRectangle" Height="90" Width="65" Fill="Black" Grid.ColumnSpan="2"/>
        <Ellipse Height="66" Width="65" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
        <Label x:Name="_numberLabel" Content="2" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="14,0,0,0"/>
    </Grid>
</UserControl>
